<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coreflow.shop.category.CategoryMapper">

	<select id="getFirstCategoryList" resultType="com.coreflow.shop.common.dto.CategoryDTO">
		
		select 
			cate_code,
			cate_prtcode,
			cate_name 
		from 
			categories 
		where
			cate_prtcode is null 
	
	</select>
	
	<select id="getSecondCategoryList" resultType="com.coreflow.shop.common.dto.CategoryDTO">
		
		select 
			cate_code, 
			cate_prtcode, 
			cate_name  
		from 
			categories 
		where 
			cate_prtcode = #{firstCategoryCode}
		
	</select>
	
</mapper>